<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address 1*"
                android:id="@+id/textView46"
                style="@style/TextviewStyle_space_dark_blue"
                android:textStyle="bold"
                android:textColor="@color/title_color" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/address1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address 2"
                android:id="@+id/textView47"
                style="@style/TextviewStyle_space_dark_blue"
                android:textStyle="bold"
                android:textColor="@color/title_color" />

            <EditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:id="@+id/address2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address 3"
                android:id="@+id/text_add3"
                style="@style/TextviewStyle_space_dark_blue"
                android:textStyle="bold"
                android:textColor="@color/title_color" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/address3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City*"
                        android:textStyle="bold"
                        android:id="@+id/textView48"
                        style="@style/TextviewStyle_space_dark_blue"
                        android:textColor="@color/title_color" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/add_city"
                        android:layout_below="@+id/textView49"
                        android:layout_alignParentLeft="true"
                        android:singleLine="true"
                        android:layout_alignParentStart="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.1">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="PinCode*"
                        android:textStyle="bold"
                        android:id="@+id/textView49"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="95dp"
                        android:layout_marginEnd="73dp"
                        style="@style/TextviewStyle_space_dark_blue"
                        android:textColor="@color/title_color" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/add_pincode"
                        android:maxLength="6"
                        android:inputType="number"
                        android:layout_alignBottom="@+id/add2"
                        android:layout_alignLeft="@+id/textView49"
                        android:layout_alignStart="@+id/textView49" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country*"
                android:id="@+id/textView52"
                style="@style/TextviewStyle_space_dark_blue"
                android:textStyle="bold"
                android:textColor="@color/title_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/layout_border1"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/country_spin" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State*"
                android:id="@+id/textView51"
                style="@style/TextviewStyle_space_dark_blue"
                android:textStyle="bold"
                android:textColor="@color/title_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/layout_border1"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/state_spin" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
